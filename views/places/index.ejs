<% include ../partials/header %>

<div class="container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Welcome to YelpLongIsland!</h1>
            <p>View our hand-picked attractions and entertainment venues all over the long island~</p>
            <p>
                <a class="btn btn-primary btn-large" href="/places/new">Add New Place</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% places.forEach(function(place){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=place.image%>">
                    <div class="caption">
                        <h4><%=place.name%></h4>
                    </div>
                    <p>
                        <a href="/places/<%= place._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>


<% include ../partials/footer %>

